# NextCraftTalk Configuration
# Deployment mode: 'self_hosted' or 'external_ai'
DEPLOYMENT_MODE=external_ai

# Nextcloud Talk Configuration
NEXTCLOUD_URL=https://your-nextcloud-instance.com
NEXTCLOUD_USERNAME=your-username
NEXTCLOUD_PASSWORD=your-password
TALK_ROOM_TOKEN=your-room-token

# External AI Configuration (for external_ai mode)
XAI_API_KEY=your-xai-api-key
XAI_BASE_URL=https://api.x.ai/v1

# Self-Hosted Configuration (for self_hosted mode)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
CHROMA_DB_PATH=./data/chroma_db
WIKI_BASE_URL=https://your-wiki.com
SCRAPING_INTERVAL_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/nextcraft.log

# Webhook Configuration
WEBHOOK_PORT=8080
WEBHOOK_HOST=0.0.0.0

# Database (if needed for future features)
# DATABASE_URL=sqlite:///./nextcraft.db
